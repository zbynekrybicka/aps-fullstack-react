{
    "components": [
        {
            "title": "App",
            "state": {
                "AuthToken": "state.data.authToken"
            },
            "reducers": [],
            "actions": [
                "ping"
            ],
            "props": [],
            "components": [
                "LoginForm",
                "Admin"
            ],
            "initialAction": "ping",
            "content": [
                {
                    "title": "LoginForm",
                    "attributes": {},
                    "open": "{!AuthToken && ",
                    "close": " \/>}"
                },
                {
                    "title": "Admin",
                    "attributes": {},
                    "open": "{AuthToken && ",
                    "close": " \/>}"
                }
            ]
        },
        {
            "title": "LoginForm",
            "state": {
                "username": "state.data.loginForm.username",
                "password": "state.data.loginForm.password"
            },
            "reducers": [
                "setUsername",
                "setPassword"
            ],
            "actions": [
                "postLogin"
            ],
            "props": [],
            "components": [],
            "initialAction": "",
            "content": [
                {
                    "title": "input",
                    "attributes": {
                        "type": "'text'",
                        "placeholder": "'P\u0159ihla\u0161ovac\u00ed jm\u00e9no'",
                        "defaultValue": "username",
                        "onInput": "e => dispatch(setUsername(e.target.value))"
                    },
                    "open": "",
                    "close": " \/>"
                },
                {
                    "title": "input",
                    "attributes": {
                        "type": "'password'",
                        "placeholder": "'Heslo'",
                        "defaultValue": "password",
                        "onInput": "e => dispatch(setPassword(e.target.value))"
                    },
                    "open": "",
                    "close": " \/>"
                },
                {
                    "title": "button",
                    "attributes": {
                        "className": "'blue'",
                        "onClick": "() => dispatch(postLogin())"
                    },
                    "open": "",
                    "close": ">{'P\u0159ihl\u00e1sit se'}<\/button>"
                }
            ]
        },
        {
            "title": "Admin",
            "state": [],
            "reducers": [],
            "actions": [],
            "props": [],
            "components": [],
            "initialAction": "",
            "content": [
                {
                    "title": "div",
                    "attributes": {},
                    "open": "",
                    "close": " \/>"
                }
            ]
        }
    ],
    "reducers": [
        {
            "title": "pingSuccess",
            "content": []
        },
        {
            "title": "pingError",
            "content": []
        },
        {
            "title": "setUsername",
            "content": [
                " state.loginForm.username = action.payload"
            ]
        },
        {
            "title": "setPassword",
            "content": [
                " state.loginForm.password = action.payload"
            ]
        },
        {
            "title": "postLoginSuccess",
            "content": [
                "state.authToken = action.payload.authToken"
            ]
        },
        {
            "title": "postLoginError",
            "content": [
                "state.errorMessage = 'P\u0159ihl\u00e1\u0161en\u00ed nebylo \u00fasp\u011b\u0161n\u00e9. Zkontrolujte p\u0159ihla\u0161ovac\u00ed \u00fadaje.'"
            ]
        }
    ],
    "state": {
        "authToken": null,
        "loginForm": {
            "username": "",
            "password": ""
        }
    },
    "actions": [
        {
            "title": "ping",
            "method": "GET",
            "url": "http:\/\/localhost:8081\/ping",
            "authorization": false,
            "before": "preloaderOn",
            "after": "preloaderOff",
            "success": "pingSuccess",
            "error": "pingError",
            "store": ""
        },
        {
            "title": "postLogin",
            "method": "POST",
            "url": "http:\/\/localhost:8081\/login",
            "authorization": false,
            "before": "preloaderOn",
            "after": "preloaderOff",
            "success": "postLoginSuccess",
            "error": "postLoginError",
            "store": "loginForm"
        }
    ],
    "routes": [
        {
            "method": "GET",
            "url": "\/ping",
            "service": {
                "className": "ping",
                "method": "ping"
            }
        },
        {
            "method": "POST",
            "url": "\/login",
            "service": {
                "className": "userAuth",
                "method": "postLogin"
            }
        }
    ],
    "services": [
        {
            "title": "ping",
            "resources": [],
            "methods": [
                {
                    "title": "ping",
                    "lines": [
                        "return new Response(200, 'connection active');"
                    ]
                }
            ]
        },
        {
            "title": "userAuth",
            "resources": {
                "userAuth": "UserAuthResource"
            },
            "methods": [
                {
                    "title": "postLogin",
                    "lines": [
                        "return $this->userAuth->login($request); "
                    ]
                }
            ]
        }
    ]
}